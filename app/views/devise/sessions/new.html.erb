      *********************************************************************************************************************************************************** -->
    <div style="background-color: #b22222">
    <div id="login-page">
      <div class="container" style="background-color: #b22222" >
      
          <div class="login-screen">
           
            <div class="form-login">

              <h2 class="form-login-heading">خوش آمدید</h2>
              </br>
            
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              
                <div class= "login-form">
                  <div class="login-wrap">

                      <%= f.text_field :username, class: "form-control", autofocus: true ,:placeholder => "شناسه کاربری"%>
                      <br>
                      
                      <%= f.password_field :password, autocomplete: "off" , :class=> "form-control" , :placeholder => "رمز "%>
                  

                      <% if devise_mapping.rememberable? -%>
                        <div class="field">
                          <%= f.check_box :remember_me %>
                          مرا به خاطر بس‍پار
                        </div>
                      <% end -%>

                 
                      <%= f.submit "ورود", :class=>"btn btn-theme btn-block"%>
                      <%= render "devise/shared/links" %>
                  </div>
                </div>
              <% end %>
              
            </div><!--tahe form login-->
          </div>
        </div>
      </div>
    </div>


  </body>
</html>



